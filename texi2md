use strict;
use warnings;

sub basics() {
    s/\@copyright{}/&copy;/g;
    s/\@dots{}/.../g;
    s/La\@TeX{}/LaTeX/g;
    s/\@(?:url|uref){(.*?)}/<$1>/g;
    s/\@var{(.*?)}/<$1>/g;
    s/\@samp{(.*?)}/'$1'/g;
    s/\@(?:code|command){(.*?)}/<code>$1<\/code>/g;
    s/\@file{(.*?)}/&lsquo;<tt>$1<\/tt>&rsquo;/g;
    s/\@option{(.*?)}/&lsquo;<code>$1<\/code>&rsquo;/g;
    s/\@(?:emph|dfn){(.*?)}/_$1_/g;
    s/\@\././g;
    s/\@:/:/g;
    if (!/^    /) {
	s/``/&ldquo;/g;
	s/''/&rdquo;/g;
    }
    s/\@(center|display|group|page)//g;
    s/\@end (display|group)//g;
    s/\@c\b.*$//;
}

sub enum_alpha {
    if (/\@enumerate ([a-zA-Z])/) {
	my $count = $1;
      LINE: while (<>) {
	  last LINE if (/\@end enumerate/);
	  basics ();
	  if (/\@item/) {
	      s/\@item/* **$count)** /;
	      $count = chr ((ord $count) + 1);
	  }
	  print;
      }
	$_ = '';
    }
}

sub enum_num {
    if (/\@enumerate ([0-9])/) {
	my $count = $1;
      LINE: while (<>) {
	  last LINE if (/\@end enumerate/);
	  basics ();
	  enum_alpha ();
	  if (/\@item/) {
	      if (!/\@item [a-zA-Z0-9]+/) {
		  chomp; $_ .= ' ' . <>;
	      }
	      s/\@item/### $count./;
	      $count += 1;
	  }
	  print;
      }
	$_ = '';
    }
}

sub example {
    if (/\@(small)?example/) {
      LINE: while (<>) {
	  last LINE if (/\@end (small)?example/);
	  $_ = '    ' . $_;
	  basics ();
	  print;
      }
	$_ = '';
    }
}

sub parse () {
    while (<>) {
	basics ();
	s/\@heading/##/;
	s/\@section/##/;
	enum_alpha ();
	enum_num ();
	example ();
	print;
    }
}

$_ = <>;
s/\@[^ \t]+/#/;
print;
parse ();
